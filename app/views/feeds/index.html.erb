<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>
<p>ようこそ<%= current_user.name %>さん</p>
<table  class="container">
  <thead>
    <tr class="row">
      <th class="col-md1">Image</th>
      <th class="col-md1">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr class="row">
        <td><%= image_tag feed.image.url, :size =>'100x100' %></td>
        <td><%= feed.content %></td>
        <td><%= link_to '記事を読む', feed %></td>

        <% if feed.user_id == current_user.id %>
        <td><%= link_to '編集', edit_feed_path(feed) %></td>
        <td><%= link_to '削除', feed, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_feed_path %>
