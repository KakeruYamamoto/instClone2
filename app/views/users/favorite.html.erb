<div class="text-center">
  <div class="search_index container">
    <% require 'date' %>
    <% date = Date.today %>
    <% weeks = ["月","火","水","木","金","土","日"] %>
    <% index = date.strftime("%u").to_i %>
    <br>
    <p id="notice"><%= notice %></p>
    <h1>お気に入り一覧</h1>
    <hr>
    <% unless @favorites.present? %>
      <br>
      <p>お気に入りはありません。</p>
      <br>
    <% else %>
      <div class="row center-block" >
        <% @favorites.each do |feed| %>
        <div class="card-deck col-sm-6 col-md-3 mt-5" id="feed_card3" >
          <div class="card img-thumbnail">
            <%= link_to feed,class: "feed_link" do %>
              <%= image_tag feed.image.url , :size =>'450x300', class: "card-img-top" %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>

    <br>
    <%= link_to '戻る', feeds_path,class: "btn btn-outline-secondary" %>
  </div>
</div>
